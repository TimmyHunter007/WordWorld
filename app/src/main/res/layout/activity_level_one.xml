<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelOneActivity">

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu"/>

    <!-- Main Content -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_bg_transparency"
            tools:context=".LevelOneActivity">

        <!-- Header Layout -->
        <include
                layout="@layout/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <!-- Level One Title -->
        <TextView
                android:id="@+id/level_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_one"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:textStyle="bold"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>

        <!-- Centered Message Layout -->
        <RelativeLayout
                android:id="@+id/message_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="20dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:text=""/>
        </RelativeLayout>

        <!-- Row 1 -->
        <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/level_one_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

            <!-- Text boxes for row 1 -->
            <EditText
                    android:id="@+id/letter1_row1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter2_row1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter3_row1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter4_row1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/row1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1.5dp">

            <!-- Text boxes for row 2 -->
            <EditText
                    android:id="@+id/letter1_row2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
