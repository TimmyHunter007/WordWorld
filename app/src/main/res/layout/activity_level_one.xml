                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/row3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1.5dp">

            <!-- Text boxes for row 4 -->
            <EditText
                    android:id="@+id/letter1_row4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter2_row4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter3_row4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter4_row4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
                android:id="@+id/row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/row4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1.5dp">

            <!-- Text boxes for row 5 -->
            <EditText
                    android:id="@+id/letter1_row5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter2_row5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter3_row5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            <EditText
                    android:id="@+id/letter4_row5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/letter_box_background"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
        </LinearLayout>

        <!-- Submit button -->
        <Button
                android:id="@+id/submit_level_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textColor="@color/button_text"
                android:textSize="29sp"
                android:backgroundTint="@color/level_1"
                android:layout_below="@+id/row5"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"/>

        <!-- Keyboard UI -->
        <LinearLayout
                android:id="@+id/keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/submit_level_one"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

            <!-- Row 1 of keyboard: QWERTYUIOP -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <!-- Buttons for row 1 -->
                <Button
                        android:id="@+id/key_q"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="Q"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_w"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="W"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_e"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="E"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_r"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="R"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_t"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="T"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_y"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="Y"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_u"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="U"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/kay_i"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="I"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/kay_o"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="O"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/kay_p"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="P"
                        android:layout_marginStart="-2.5dp"/>
            </LinearLayout>

            <!-- Row 2 of keyboard: ASDFGHJKL -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <!-- Buttons for row 2 -->
                <Button
                        android:id="@+id/key_a"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="A"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_s"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="S"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_d"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="D"
                        android:layout_marginStart="-2.5dp"/>

                <Button
                        android:id="@+id/key_f"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
