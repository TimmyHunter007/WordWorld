                        android:id="@+id/kay_k"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/button_text"
                        android:backgroundTint="@color/level_1"
                        android:text="K"
                        android:layout_marginStart="-2.5dp"/>

