
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <!-- Main content view with your existing layout -->

    <!-- Navigation Drawer -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:scaleType="centerCrop"
                android:background="@drawable/main_bg_transparency"
                android:contentDescription="@string/nav"/>

        <!-- Header Layout -->
        <include
                layout="@layout/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <!-- Show date based on phone's date -->
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="651dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <ImageView
                    android:id="@+id/BadgeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/achievments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" First Word level 1!!"
                    android:background="@color/level_1"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="-13dp"
                    android:textSize="20dp"

                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="155dp"
                    android:layout_marginBottom="5dp"
                    android:max="1"
                    android:background="@color/white"
                    android:progress="0"
                    android:layout_marginLeft="5dp"
                    tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" First Word Level 2!!"
                    android:textColor="@color/black"
                    android:background="@color/level_2"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="-5dp"
                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar2"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="195dp"
                    android:layout_marginBottom="5dp"
                    android:max="1"
                    android:progress="0"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"

                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  First Word Level 3!!"
                    android:textColor="@color/button_text"
                    android:background="@color/level_3"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="-5dp"
                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="235dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:progress="1"
                    android:background="@color/white"
                    android:max="1"
                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Daily Streak "
                    android:textColor="@color/black"
                    android:background="@color/headerBar"
                    android:textSize="20dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="-3dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar4"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="275dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  10 Word Streak"
                    android:layout_marginTop="310dp"
                    android:textColor="@color/black"
                    android:background="@color/color_4"
                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar5"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="315dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:max="10"
                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  20 Word Streak"
                    android:layout_marginTop="350dp"
                    android:textColor="@color/black"
                    android:background="@color/color_4"
                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar6"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="355dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:max="20"
                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  50 Word Streak"
                    android:layout_marginTop="390dp"
                    android:textColor="@color/black"
                    android:background="@color/color_4"
                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar7"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="395dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:max="50"
                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/Badge8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Complete 100 words "
                    android:textColor="@color/black"
                    android:background="@color/teal_200"
                    android:layout_marginTop="430dp"

                    android:textSize="20dp"
                    tools:ignore="InvalidId"/>
            <ProgressBar
                    android:id="@+id/ProgressBar8"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="435dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:max="100"

                    tools:ignore="InvalidId"/>
            <ImageView
                    android:id="@+id/BadgeImage8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:translationX="90dp"
            android:translationY="50dp"
            android:layout_height="440dp"
            android:layout_gravity="end"
            android:background="@color/headerBar"
            app:menu="@menu/menu"
            tools:ignore="MissingConstraints"/>

</androidx.drawerlayout.widget.DrawerLayout>
