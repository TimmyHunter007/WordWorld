<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/rounded_background"
              android:orientation="vertical"
              android:padding="16dp">

    <EditText
            android:id="@+id/old_password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Old Password"
            android:inputType="textPassword"
            android:background="@drawable/input_fields_profile"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:padding="16dp" />

    <EditText
            android:id="@+id/new_password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:background="@drawable/input_fields_profile"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp" />

    <Button
            android:id="@+id/update_password_button_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:backgroundTint="@color/profile_leaderBoard_button"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
</LinearLayout>
