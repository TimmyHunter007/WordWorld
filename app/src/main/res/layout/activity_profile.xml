<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg_transparency"
                tools:context=".ProfileActivity">

    <!-- Header Layout -->
    <include
            layout="@layout/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_below="@id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    <!-- TableLayout for organized display -->
    <TableLayout
            android:id="@+id/profile_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:layout_below="@id/profile_title"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:stretchColumns="1"
            android:padding="16dp"
            android:layout_centerHorizontal="true">

        <TableRow>
            <TextView
                    android:text="Name:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/name_display"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Email:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/email_display"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Silver Coins:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/silver_coins"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Total Badges:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/badge_count_display"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Points:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/points_display"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Words Correct:"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />

            <TextView
                    android:id="@+id/word_correct_display"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <Button
            android:id="@+id/add_coins_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Coins (10)"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:backgroundTint="@color/profile_leaderBoard_button"
            android:layout_above="@id/update_password_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

    <Button
            android:id="@+id/update_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:backgroundTint="@color/profile_leaderBoard_button"
            android:layout_above="@id/sign_out_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

    <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:backgroundTint="@color/level_3"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp" />

</RelativeLayout>
